<h1>Listing runs</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Participants</th>
      <th>Km</th>
      <th>Duration</th>
      <th>Max pulse</th>
      <th>Comments</th>
      <th>Map link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @runs.each do |run| %>
      <tr>
        <td><%= run.date %></td>
        <td><%= run.participants %></td>
        <td><%= run.km %></td>
        <td><%= run.duration %></td>
        <td><%= run.max_pulse %></td>
        <td><%= run.comments %></td>
        <td><%= run.map_link %></td>
        <td><%= link_to 'Show', run %></td>
        <td><%= link_to 'Edit', edit_run_path(run) %></td>
        <td><%= link_to 'Destroy', run, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Run', new_run_path %>
