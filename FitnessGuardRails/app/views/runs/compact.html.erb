<h1>Erfasst - kompakt</h1>

<table>
  <thead>
    <tr>
      <th class="icon-date"></th>
      <th class="icon-km"></th>
      <th class="icon-duration"></th>
      <th class="icon-min_km"></th>
      <th class="icon-km_h"></th>
      <th class="icon-power"></th>
    </tr>
  </thead>

  <tbody>
    <% @runs.each do |run| %>
      <%= link_to run  do %>
        <tr style="background-color: <%= bgcolor_by_participants(run.all_participants) %>" class = "link_row" data-link="<%= run_path(run) %>">
          <td><%= Rails.date_relative(run.date) %></td>
          <td><%= run.km_rounded %></td>
          <td><%= run.duration_mmcolonss %></td>
          <td><%= run.min_km %></td>
          <td><%= run.km_h %></td>
          <td><%= run.power %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= javascript_include_tag 'clickable_row' %>